function car_make(x,y)
 local a={}
 a.x=x
 a.y=y
 a.mx=0
 a.my=0
 a.slow=false
 a.a=90
 
 return a
end

function car_update(a)
 local m_max=1
 local m_inc=0.2
 local m_dec=0.1
 
 if (btn(0)) then
  a.mx-=m_inc
 end
 if (btn(1)) then
  a.mx+=m_inc
 end
 if (btn(2)) then
  a.my-=m_inc
 end
 if (btn(3)) then
  a.my+=m_inc
 end
 
 if a.mx>m_max then a.mx=m_max
 elseif a.mx<-m_max then a.mx=-m_max
 end
 
 if a.my>m_max then a.my=m_max
 elseif a.my<-m_max then a.my=-m_max
 end
 
 a.x+=a.mx
 a.y+=a.my
 
 a.slow=false
 if (tile_flag_at(a.x,a.y) & 1) == 0 then a.slow=true end
 if (tile_flag_at(a.x+7,a.y) & 1) == 0 then a.slow=true end
 if (tile_flag_at(a.x+7,a.y+7) & 1) == 0 then a.slow=true end
 if (tile_flag_at(a.x,a.y+7) & 1) == 0 then a.slow=true end
  
 if a.slow then m_dec=m_dec*3 end
 
 if a.mx>m_dec then a.mx-=m_dec
 elseif a.mx<-m_dec then a.mx+=m_dec
 else a.mx=0
 end
 
 if a.my>m_dec then a.my-=m_dec
 elseif a.my<-m_dec then a.my+=m_dec
 else a.my=0
 end
end

function car_draw(a)
 spr_r(2,a.x,a.y,a.a,1,1)
end
